<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="major" class="com.guergen.tonicandscales.Scale">
        <constructor-arg name="scale" type="Long" value="2741" /> <!-- 0b101010110101 -->
        <constructor-arg name="name" type="String" value="Major" />
    </bean>

    <bean id="minor" class="com.guergen.tonicandscales.Scale">
        <constructor-arg name="scale" type="Long" value="1453" /> <!-- 0b010110101101 -->
        <constructor-arg name="name" type="String" value="Minor" />
    </bean>
</beans>